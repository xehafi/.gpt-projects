<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tigrigna.App.Mobile2.Views.SettingsPage"
             Title="Settings">
    <VerticalStackLayout Padding="16" Spacing="12">
        <Label Text="Appearance" FontSize="20" FontAttributes="Bold" />
        <HorizontalStackLayout Spacing="8">
            <Button Text="Light" Command="{Binding SetLightCommand}" />
            <Button Text="Dark" Command="{Binding SetDarkCommand}" />
        </HorizontalStackLayout>

        <Label Text="Utilities" FontSize="20" FontAttributes="Bold" Margin="0,16,0,0"/>
        <Button Text="Reset Progress" Command="{Binding ResetProgressCommand}" />
    </VerticalStackLayout>
</ContentPage>
