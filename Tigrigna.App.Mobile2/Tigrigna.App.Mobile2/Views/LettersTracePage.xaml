<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Tigrigna.App.Mobile2.Views.LettersTracePage"
    Title="Trace the glyph">
    <Grid RowDefinitions="Auto,*,Auto" Padding="16" RowSpacing="12">
        <Label Text="{Binding Glyph}" FontSize="64" Opacity="0.15" HorizontalOptions="Center" />
        <GraphicsView x:Name="Canvas" Grid.Row="1" BackgroundColor="White" HeightRequest="400"/>
        <HorizontalStackLayout Grid.Row="2" Spacing="10" HorizontalOptions="Center">
            <Button Text="Clear" Clicked="OnClearClicked" />
            <Button Text="Complete" Command="{Binding CompleteCommand}" />
        </HorizontalStackLayout>
    </Grid>
</ContentPage>

