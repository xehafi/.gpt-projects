<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Tigrigna.App.Mobile2.Views.LettersTypePage"
    x:Name="ThisPage"
    Title="Type what you hear">

    <VerticalStackLayout Padding="16" Spacing="16">
        <Label Text="{Binding QuestionIndex, StringFormat='Question {0}'}" />
        <Button Text="ðŸ”Š Play" Command="{Binding PlayCommand}" />

        <Label Text="Which letter did you hear?" FontSize="18" />

        <CollectionView ItemsSource="{Binding Options}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Button Text="{Binding Glyph}"
                  Command="{Binding BindingContext.ChooseCommand, Source={x:Reference ThisPage}}"
                  CommandParameter="{Binding}" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Label Text="{Binding Feedback}" FontSize="16" />
    </VerticalStackLayout>
</ContentPage>
