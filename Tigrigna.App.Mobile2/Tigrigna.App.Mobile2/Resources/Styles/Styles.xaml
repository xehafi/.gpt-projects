<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <!-- Swap to an Ethiopic font later -->
    <x:String x:Key="EthiopicFont">OpenSansRegular</x:String>

    <Style TargetType="ContentPage">
        <Setter Property="BackgroundColor" Value="{StaticResource ColorBackground}" />
    </Style>

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource ColorText}" />
        <Setter Property="FontFamily" Value="{StaticResource EthiopicFont}" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource ColorPrimary}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Padding" Value="14,10" />
    </Style>

    <Style TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource ColorCard}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="HasShadow" Value="True" />
    </Style>
</ResourceDictionary>