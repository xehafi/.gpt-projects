<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Tigrinya.App.Mobile.ViewModels"
             x:Class="Tigrinya.App.Mobile.Pages.ProfilePage">
    <ContentPage.BindingContext>
        <vm:ProfileViewModel />
    </ContentPage.BindingContext>
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">
            <Label Text="Profile Avatar" FontSize="24" />
            <Picker Title="Base language" ItemsSource="{Binding BaseLanguages}" SelectedItem="{Binding SelectedBaseLanguage}" />
            <Label Text="Choose your avatar (9 Eritrean groups)" />
            <Picker Title="Outfit" ItemsSource="{Binding Outfits}" SelectedItem="{Binding SelectedOutfit}" />
            <Label Text="Daily goal" />
            <Picker Title="Daily goal" ItemsSource="{Binding GoalOptions}" SelectedItem="{Binding SelectedDailyGoal}" />
            <Label Text="Today" />
            <ProgressBar Progress="{Binding TodayXp}" />
            <CollectionView ItemsSource="{Binding Avatars}" SelectionMode="Single" SelectedItem="{Binding SelectedAvatar}">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="3" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="6" Padding="10">
                            <VerticalStackLayout>
                                <Label Text="{Binding Name}" HorizontalTextAlignment="Center" />
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
                    <Button Text="Save" Command="{Binding SaveCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
