<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Tigrinya.App.Mobile.ViewModels"
             x:Class="Tigrinya.App.Mobile.Pages.ReviewPage">
    <ContentPage.BindingContext>
        <vm:ReviewViewModel />
    </ContentPage.BindingContext>
    <VerticalStackLayout Padding="16" Spacing="12">
        <Label x:Name="TitleLabel" Text="Review (SRS)" FontSize="24" />
        <Label Text="{Binding DueSummary}" />
        <Button Text="Start Review" Command="{Binding StartReviewCommand}" />
    </VerticalStackLayout>
</ContentPage>
