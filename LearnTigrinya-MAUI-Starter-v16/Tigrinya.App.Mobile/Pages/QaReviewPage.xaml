<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tigrinya.App.Mobile.Pages.QaReviewPage">
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">
            <Label x:Name="TitleLabel" Text="Content QA â€” Reviewer" FontSize="24" />
            <Picker x:Name="ContentPicker" Title="Content" SelectedIndexChanged="OnContentChanged">
                <Picker.Items>
                    <x:String>animals-1</x:String>
                    <x:String>household-1</x:String>
                </Picker.Items>
            </Picker>
            <CollectionView x:Name="ChecklistView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="Auto,*,Auto" Padding="6" ColumnSpacing="12">
                            <Switch Grid.Column="0" Toggled="OnToggle" />
                            <Label Grid.Column="1" Text="{Binding Title}" />
                            <Entry Grid.Column="2" Placeholder="Reviewer" WidthRequest="120" TextChanged="OnReviewerChanged" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Label x:Name="StatusLabel" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
